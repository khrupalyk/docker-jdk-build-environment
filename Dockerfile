FROM ubuntu:14.04
RUN apt-get update && apt-get install -y -q mercurial && cd home/ && hg clone http://hg.openjdk.java.net/jdk8/jdk8 OpenJDK && cd OpenJDK 
RUN cd /home/OpenJDK/ && bash ./get_source.sh 
RUN apt-get install -y -q python-software-properties && apt-get install -y -q software-properties-common && add-apt-repository -y ppa:ubuntu-toolchain-r/test && apt-get update && apt-get install -y -q gcc-4.8 && update-alternatives --install /usr/bin/gcc gcc /usr/bin/gcc-4.8 50 && apt-get install -y -q make && apt-get install -y -q cpio && apt-get install -y -q unzip && apt-get install -y -q zip && add-apt-repository -y ppa:webupd8team/java && apt-get update && apt-get install -y -q libx11-dev libxext-dev libxrender-dev libxtst-dev libxt-dev && apt-get install -y -q libcups2-dev && apt-get install -y -q libfreetype6-dev && apt-get install -y -d libasound2-dev && apt-get install -y -q build-essential && apt-get install -y -q aptitude && aptitude build-dep openjdk-7 && apt-get install ccache
